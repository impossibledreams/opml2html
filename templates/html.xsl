	<xsl:template match="/">
 		<html>
 			<head>
 				<title>OPML Diplay: <xsl:value-of select="opml/head/title"/></title>
 				<script src="includes/listCollapse.js" type="text/javascript" language="javascript1.2"></script> 				
				<xsl:comment>
